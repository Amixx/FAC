{% extends 'layout/layout.html.twig' %}

{% block title %} Videoklipu katalogs {% endblock %}

{% block content %}
    <div class="container mx-auto p-4">
        <h1 class="mb-4">
            <span class="text-2xl font-bold text-gray-800">Videoklipu katalogs</span>
        </h1>
        <ul class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-4">
            {% for video in videos %}
                {% include 'partials/video-card.html.twig' %}
            {% else %}
                <div class="bg-white rounded-lg shadow-lg p-4">
                    <p>Netika atrasts neviens videoklips.</p>
                </div>
            {% endfor %}
            {% if not videos is empty and hasMoreItems %}
                <li>
                    <button class="mt-4 w-full bg-white rounded-lg shadow-lg p-4 flex flex-col justify-between leading-normal">
                         <span class="font-bold text-sm">
                            <a href="{{ path('home', {'lastPage': lastPage + 1}) }}"
                               class="text-red-500 hover:text-gray-700 hover:underline">
                                Ielādēt vēl
                            </a>
                        </span>
                    </button>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
