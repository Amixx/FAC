<div class="container mx-auto p-4">
    <h1 class="mb-4 flex gap-4 justify-between items-center">
        <span class="text-2xl font-bold text-gray-800">Ziņas</span>
        <a href="{{ path('posts_new') }}" class="text-emerald-500 hover:text-gray-700 hover:underline font-medium">
            Jauna ziņa
        </a>
    </h1>
    <ul class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-4">
        {% for post in posts %}
            {% include 'partials/post-card.html.twig' %}
        {% else %}
            <div class="bg-white rounded-lg shadow-lg p-4">
                <p>Netika atrasta neviena ziņa.</p>
            </div>
        {% endfor %}
        {% if not posts is empty and hasMoreItems %}
            <li>
                <button class="mt-4 w-full bg-white rounded-lg shadow-lg p-4 flex flex-col justify-between leading-normal">
                         <span class="font-bold text-sm">
                            <a href="{{ path('posts', {'lastPage': lastPage + 1}) }}"
                               class="text-emerald-500 hover:text-gray-700 hover:underline">
                                Ielādēt vēl
                            </a>
                        </span>
                </button>
            </li>
        {% endif %}
    </ul>
</div>
