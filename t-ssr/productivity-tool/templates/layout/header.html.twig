<header class="container">
    <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="{{ path('todos') }}"
               hx-get="{{ path('todos_body') }}"
               hx-target="#main"
               hx-replace-url="{{ path('todos') }}"
               onclick="setActiveLink('todos')"
               class="self-center text-2xl font-semibold whitespace-nowrap">
                Mērķu Meistars
            </a>
            <button data-collapse-toggle="navbar-default" type="button"
                    class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
                    aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Atvērt navigāciju</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>
            {% if app.session.get('is_authenticated') == 1 %}
                <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                    <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white">
                        <li>
                            <a href="{{ path('todos') }}"
                               hx-get="{{ path('todos_body') }}"
                               hx-target="#main"
                               hx-replace-url="{{ path('todos') }}"
                               onclick="setActiveLink(this)"
                               data-url="todos"
                               class="nav-link block py-2 px-3 md:p-0 {{ app.request.attributes.get('_route') == 'todos'
                               ? 'text-white bg-sky-700 rounded md:bg-transparent md:text-sky-700'
                               : 'text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-sky-700' }}"
                                    {{ app.request.attributes.get('_route') == 'todos'? 'aria-current="page"': '' }}>
                                Darāmie darbi
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('todo_categories') }}"
                               hx-get="{{ path('todo_categories_body') }}"
                               hx-target="#main"
                               hx-replace-url="{{ path('todo_categories') }}"
                               onclick="setActiveLink(this)"
                               data-url="todo_categories"
                               class="nav-link block py-2 px-3 md:p-0 {{ app.request.attributes.get('_route') == 'todo_categories'
                               ? 'text-white bg-sky-700 rounded md:bg-transparent md:text-sky-700'
                               : 'text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-sky-700' }}"
                                    {{ app.request.attributes.get('_route') == 'todo_categories'? 'aria-current="page"': '' }}>
                                Darbu kategorijas
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('spent_times') }}"
                               hx-get="{{ path('spent_times_body') }}"
                               hx-target="#main"
                               hx-replace-url="{{ path('spent_times') }}"
                               onclick="setActiveLink(this)"
                               data-url="spent_times"
                               class="nav-link block py-2 px-3 md:p-0 {{ app.request.attributes.get('_route') == 'spent_times'
                               ? 'text-white bg-sky-700 rounded md:bg-transparent md:text-sky-700'
                               : 'text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-sky-700' }}"
                                    {{ app.request.attributes.get('_route') == 'spent_times'? 'aria-current="page"': '' }}>
                                Pavadītais laiks
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('logout') }}"
                               class="block py-2 px-3 md:p-0 {{ app.request.attributes.get('_route') == 'logout'
                               ? 'text-white bg-sky-700 rounded md:bg-transparent md:text-sky-700'
                               : 'text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-sky-700' }}"
                                    {{ app.request.attributes.get('_route') == 'logout'? 'aria-current="page"': '' }}>
                                Beigt darbu
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </nav>
</header>
