{% extends 'layout/layout.html.twig' %}

{% block title %} {{ data.title }} {% endblock %}

{% block meta %}
    <meta name="title" content="{{ data.metaTitle }}">
    <meta name="description" content="{{ data.metaDescription }}">
    <meta name="keywords" content="{{ data.metaKeywords }}">
{% endblock %}

{% block content %}
    <div class="relative">
        <img class="absolute inset-0 h-full w-full object-cover" src="{{ data.images[0] }}" alt="hero">
        <div class="absolute inset-0 bg-black opacity-70"></div>
        <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
            <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">{{ data.title }}</h1>
            <p class="mt-6 text-xl text-white max-w-3xl">{{ data.content }}</p>
        </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {% for offer in data.offers %}
                <div class="rounded overflow-hidden shadow-lg flex flex-col">
                    <div class="h-40 overflow-hidden relative">
                        <img class="w-full object-cover h-full" src="{{ offer.image }}" alt="{{ offer.title }}">
                        <div class="absolute inset-0 bg-black opacity-70"></div>
                        <div class="font-bold text-xl text-white absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">{{ offer.title }}</div>
                    </div>
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2">{{ offer.title }}</div>
                        <p class="text-gray-700 text-base">{{ offer.description }}</p>
                    </div>
                    <div class="pb-4 px-6 grow flex flex-col justify-end">
                        <div class="flex items-center justify-between gap-2 ">
                            <span class="bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">Sākot no: {{ offer.starting_price }} EUR</span>
                            <button class="bg-yellow-700 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded">
                                Uzzināt vairāk
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
